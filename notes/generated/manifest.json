{
  "manifest_version": 2,
  "name": "OpenAI Prompt Generator",
  "version": "1.0",
  "description": "A Chrome extension that generates a response from OpenAI based on user input.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "OpenAI Prompt Generator"
  },
  "permissions": ["activeTab"]
}